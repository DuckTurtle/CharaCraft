<body>   
    <h1 class= "text-center pt-4 mb-4 text-warning">Welcome Back, {{userName}}!</h1>
    <!--Start of grid displaying characters on user portal-->
    <div class = "CharacterGrid">
        <div class ="row justify-content-center pt-4">
            {{#if characters}}
            {{#each character as |characters|}}
            <div class="col-md-3 CharacterBlock" id="CharacterBlock" >
                <div class ="col p-2 text-black bg-light mb-4">
                    <h2>{{characters.name}}</h2>
                    <p><strong>Campaign Name:</strong> {{characters.campaign_name}}</p>
                    <p><strong>Class:</strong> {{characters.class}}</p>
                    <p><strong>Level:</strong> {{characters.level}}</p>
                    <p><strong>Race:</strong> {{characters.race}}</p>
                    <button class="btn btn-primay" onclick="document.location.replace(`/character/{{characters.id}}`)">Select</button>
                    <button class="btn pl-2 btn-alert" id="deleteButtons" data-id="{{characters.id}}" >Delete Character</button>
                </div>
            </div>
            {{/each}}
            {{/if}}
        </div>
    </div>
        
</body>
</html>
<script src=".././js/index.js"></script>