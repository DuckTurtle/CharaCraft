<body>   
    <h1 class= "text-center pt-4 mb-4">Welcome Back, {{username}}!</h1>
    <!--Start of grid displaying characters on user portal-->
    <div class = "CharacterGrid">
        <div class ="row justify-content-center pt-4">
            {{#each characters as |character|}}
            <div class="col-md-3">
                <div class ="col p-2 text-black bg-light mb-4">
                    <h2>{{this.name}}</h2>
                    <p><strong>Campaign Name:</strong> {{campaign_name}}</p>
                    <p><strong>Class:</strong> {{character_stats.class}}</p>
                    <p><strong>Level:</strong> {{character_stats.level}}</p>
                    <p><strong>Race:</strong> {{character_stats.race}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
        <div class = "CharacterGrid position absolute top-50 start-0">
            <div class ="row justify-content-center">
                {{#each characters as |character|}}
                <div class="col-md-3">
                    <div class ="col p-2 text-black bg-light mb-4">
                        <h2>{{this.name}}</h2>
                        <p><strong>Campaign Name:</strong> {{campaign_name}}</p>
                        <p><strong>Class:</strong> {{character_stats.class}}</p>
                        <p><strong>Level:</strong> {{character_stats.level}}</p>
                        <p><strong>Race:</strong> {{character_stats.race}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
</body>
</html>