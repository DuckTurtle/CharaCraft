<!-- Modal -->
<div class="modal fade" id="newWeapon" tabindex="-1" aria-labelledby="newWeaponLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newWeaponLabel">Weapon</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="myWeapon">
        <label for="weapon-select" class="form-label">Pick Your Weapon</label>
        <select type="weapon" class="form-control" id="weapon-select"></select>
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveWeapon">Save changes</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="newSpell" tabindex="-1" aria-labelledby="newSpellLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newSpellLabel">Spell</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="mySpell">
        <label for="weapon-select" class="form-label">Pick Your Spell</label>
        <select type="weapon" class="form-control" id="spell-select"></select>
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveSpell">Save changes</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="newOther" tabindex="-1" aria-labelledby="newOtherLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newOtherLabel">Other</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="myOther">
        <label for="weapon-select" class="form-label">Enter your custom Info</label>
        <input type="text" id="otherTitle" placeholder="Title"><br>
        <input type="text" id="otherDec" placeholder="Discription"><br>
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveOther">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="main fullLength d-flex justify-content-center" id="charater" value="{{character.id}}">
  <div class="row justify-content-center align-content-center">
    <!-- spells div-->
    <div class="row col-2 d-flex justify-content-center bg-warning justify-content-center g-0 border border-dark border-5">
      <div>
        <h3 class="text-center text-decoration-underline"><strong>SPELLS</strong></h3>
        <a class="btn btn-outline-primary my-1 d-flex justify-content-center my-3" type="button" role="button" data-bs-toggle="modal" data-bs-target="#newSpell">Add a Spell</a>
      <div class="table-wrapper-scroll-y my-custom-scrollbar">
      <table class="table border border-white border-2 table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Spell Name</th>
            <th scope="col">Description</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody class="table-group-divider" id="spelldiv">
          {{#each character.spells as |spell|}}
            <tr id="{{spell.dataValues.id}}">
            <th>{{spell.dataValues.name}}</th>
            <td>{{spell.dataValues.Damage}}</td>
            </tr>
            {{/each}}
        </tbody>
      </table>
      </div>
      </div>
    </div>

    <!-- main cahracter sheet-->
    <div class="row col-5 align-self-center bg-warning justify-content-center g-0 border border-dark border-5 border-end-0 border-start-0">
      <div>
        <h1 class="text-center text-decoration-underline" id="campaignName" contenteditable="true">{{character.campaign_name}}</h1>
      </div>
      <div>
        <h2 class="text-center" id="character" contenteditable="true" >{{character.name}}</h2>
      </div>
      <div>
        <h3 class="text-center" id="race" contenteditable="true"> {{character.race}}</h3>
        <h3 class="text-center" id="class" contenteditable="true">{{character.class}}</h3>
        <h3 class="text-center" id="level" contenteditable="true"> {{character.level}}</h3>
      </div>
      <a class="btn btn-outline-primary my-1" id="saveCharacterBtn" role="button">Save</a>
      <div class="row justify-content-around mb-4">
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="hitpoints" id="hitpoints">Hitpoints</label>
          <br />
          <input type="number" id="hitpoints" class="statWidth" value="{{character.hp}}">
        </div>
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="armor" id="armorClass">Armor Class</label>
          <br />
          <input type="number" name="armor" id="armor" class="statWidth" required="required" placeholder="0" value="{{character.armor_class}}">
        </div>
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="speed">Speed</label>
          <br/>
          <input type="number" name="speed" id="speed" class="statWidth" required="required" placeholder="0" value="{{character.speed}}">
        </div>
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="initiative" >Initiative</label>
          <br/>
          <input type="number" name="initiative" id="initiative" class="statWidth" required="required" placeholder="0" value="{{character.initiative}}">
        </div>
      </div>

      <hr />
      <div class="stats abilities d-flex justify-content-evenly my-3">
        <div>
          <label for="str"><strong>STR</strong></label>
          <div id="str" class="stat" contenteditable="true">{{character.strength}} (<math>({{character.strength}}-10)/2</math>)</div>
        </div>
        <div>
          <label for="dex"><strong>DEX</strong></label>
          <div id="dex" class="stat" contenteditable="true">{{character.dexterity}} (<math>({{character.dexterity}}-10)/2</math>)</div>
        </div>
        <div>
          <label for="con"><strong>CON</strong></label>
          <div id="con" class="stat" contenteditable="true">{{character.constitution}} (<math>({{character.constitution}}-10)/2</math>)</div>
        </div>
      </div>
      <div class="stats abilities d-flex justify-content-evenly my-3">
        <div>
          <label for="int"><strong>INT</strong></label>
          <div id="int" class="stat" contenteditable="true">{{character.intelligence}} (<math>({{character.intelligence}}-10)/2</math>)</div>
        </div>
        <div>
          <label for="wis"><strong>WIS</strong></label>
          <div id="wis" class="stat" contenteditable="true">{{character.wisdom}} (<math>({{character.wisdom}}-10)/2</math>)</div>
        </div>
        <div>
          <label for="cha"><strong>CHA</strong></label>
          <div id="cha" class="stat" contenteditable="true">{{character.charisma}} (<math>({{character.charisma}}-10)/2</math>)</div>
        </div>
      </div> 
    </div>
 <!-- weapon div-->
      <div class="row col-2 d-flex bg-warning justify-content-center g-0 border border-dark border-5 border-end-0">
        <div>
          <h3 class="text-center text-decoration-underline" >Weapons</h3>
          <a class="btn btn-outline-primary my-1 d-flex justify-content-center my-3" type="button" role="button" data-bs-toggle="modal" data-bs-target="#newWeapon">Add a Weapon</a>
      <div class="table-wrapper-scroll-y my-custom-scrollbar">
      <table class="table border border-white border-2  table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Weapon Name</th>
              <th scope="col">Description</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody class="table-group-divider" id="weapondiv">
            {{#each character.weapons as |weapons|}}
            <tr id="{{weapons.dataValues.id}}">
            <th>{{weapons.dataValues.name}}</th>
            <td>{{weapons.dataValues.damage}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
        </div>
      </div>
    <!-- 'other' div-->
  <div class="row col-2 d-flex bg-warning justify-content-center g-0 border border-dark border-5">
    <div>
      <h3 class="text-center text-decoration-underline"><strong>Other</strong></h3>
      <a class="btn btn-outline-primary my-1 d-flex justify-content-center my-3" type="button" role="button" data-bs-toggle="modal" data-bs-target="#newOther">add Item</a>
         <div class="table-wrapper-scroll-y my-custom-scrollbar">
          <table class="table border border-white border-2  table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody class="table-group-divider" id="otherdiv">
          {{#each character.others as |other|}}
          <tr id="{{other.dataValues.id}}">
            <th>{{other.dataValues.name}}</th>
            <td>{{other.dataValues.description}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
