
<!-- Modal -->
<div class="modal fade" id="newWeapon" tabindex="-1" aria-labelledby="newWeaponLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newWeaponLabel">Weapon</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="myWeapon">
        <label for="weapon-select" class="form-label">Pick Your Weapon</label>
        <select type="weapon" class="form-control" id="weapon-select"></select>
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveWeapon">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="main fullLength d-flex justify-content-center" id="charater" value="{{Character.id}}">
  <div class="row justify-content-center align-content-center">
      <!-- spells div-->
    <div class="row col-2 d-flex justify-content-center bg-warning justify-content-center g-0 border border-dark border-5">
      <div>
        <h3 class="text-center text-decoration-underline"><strong>SPELLS</strong></h3>
        <a class="btn btn-outline-primary my-1 d-flex justify-content-center my-3" id="newSpell" href="#" role="button">add a spell</a>
      <table class="table border border-white border-2  table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Spell name</th>
            <th scope="col">Description</th>
          </tr>
        </thead>
        <tbody class="table-group-divider" id="spelldiv">
            {{#each spells as |character|}}
            <td>{spell}</td>
            {{/each}}
        </tbody>
      </table>
      </div>
    </div>
  
  <!-- main cahracter sheet-->
  <div
      class="row col-5 align-self-center bg-warning justify-content-center g-0 border border-dark border-5 border-end-0 border-start-0"
    >
      <div>
        <h1 class="text-center text-decoration-underline" id="campaignName" contenteditable="true">Campaign Name</h1>
      </div>
      <div>
        <h2 class="text-center" id="characterName" contenteditable="true" >Character Name</h2>
      </div>
      <div>
        <h3 class="text-center" id="race" contenteditable="true"> Race</h3>
        <h3 class="text-center" id="class" contenteditable="true"> Class</h3>
        <h3 class="text-center" id="level" contenteditable="true"> Level </h3>
      </div>
      <div class="row justify-content-around mb-4">
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="hitpoints" id="hitpoints">Hitpoints</label>
          <br />
          <input type="number" id="hitpoints" class="statWidth" value="18">
        </div>
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="armor" id="armorClass">Armor Class</label>
          <br />
          <input type="number" name="armor" id="armor" class="statWidth" required="required" placeholder="0" value="15">
        </div>
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="speed">Speed</label>
          <br/>
          <input type="number" name="speed" id="speed" class="statWidth" required="required" placeholder="0" value="30">
        </div>
        <div class="col-md-4 text-center">
          <label class="labelWidth" for="initiative" >Initiative</label>
          <br/>
          <input type="number" name="initiative" id="initiative" class="statWidth" required="required" placeholder="0" value="30">
        </div>
      </div>
  
  <hr>
  <div class="stats abilities d-flex justify-content-evenly my-3">
      <div>
       <label for="str"><strong>STR</strong></label>
       <div id="str" class="stat" contenteditable="true">8 (+0)</div>
      </div>
           <div>
          <label for="dex"><strong>DEX</strong></label>
          <div id="dex" class="stat" contenteditable="true">16 (+3)</div>
      </div>
      <div>
          <label for="con"><strong>CON</strong></label>
           <div id="con" class="stat" contenteditable="true">10 (+0)</div>
      </div>
  </div>
  <div class="stats abilities d-flex justify-content-evenly my-3">
           <div>
          <label for="int"><strong>INT</strong></label>
           <div id="int" class="stat" contenteditable="true">13 (+1)</div>
      </div>
      <div>
          <label for="wis"><strong>WIS</strong></label>
           <div id="wis" class="stat" contenteditable="true">12 (+1)</div>
      </div>
      <div>
          <label for="cha"><strong>CHA</strong></label>
           <div id="cha" class="stat" contenteditable="true">16 (+3)</div>
      </div>
  </div>
</div>
  <!-- weapon div-->
  <div class="row col-2 d-flex bg-warning justify-content-center g-0 border border-dark border-5 border-end-0">
        <div>
          <h3 class="text-center text-decoration-underline" >Weapons</h3>
          <a class="btn btn-outline-primary my-1 d-flex justify-content-center my-3" type="button" id="newWeapon" role="button" data-bs-toggle="modal" data-bs-target="#newWeapon">Add a Weapon</a>
      <table class="table border border-white border-2  table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Weapon name</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody class="table-group-divider" id="weapondiv">
          </tbody>
        </table>
        </div>
      </div>
  <!-- 'other' div-->
  <div class="row col-2 d-flex bg-warning justify-content-center g-0 border border-dark border-5">
    <div>
      <h3 class="text-center text-decoration-underline"><strong>Other</strong></h3>
      <a class="btn btn-outline-primary my-1 d-flex justify-content-center my-3" id="newOther" href="#" role="button">add Item</a>
          <table class="table border border-white border-2  table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">description</th>
          </tr>
        </thead>
        <tbody class="table-group-divider" id="otherdiv">
          {{#each other as |character|}}
          <th>{other}</th>
          <td>{other.}</td>
          {{/each}}
        </tbody>
      </table>
    </div> 
  </div>
</div>

</div>
